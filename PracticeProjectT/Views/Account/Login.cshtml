@model PracticeProjectT.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recruiting App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/PracticeWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.5/sweetalert2.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .container, .container-fluid, .container-lg, .container-md, .container-sm, .container-xl, .container-xxl {
            width: 100%;
            padding-left: 0;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
</head>
<body>


    <div class="container-fluid">
        <section class="vh-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-8 px-0 d-none d-sm-block">
                        <img src="https://plus.unsplash.com/premium_photo-1677020308262-4f150d263a08?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
                             alt="Login image"
                             class="w-100 vh-100"
                             style="object-fit: cover; object-position: left" />
                    </div>

                    <div class="col-sm-4 text-black">
                        <div class="px-5 ms-xl-4">
                            <i class="fa-solid fa-users fa-2x me-3 pt-5 mt-xl-4"></i>

                            <span class="h6 fw-bold mb-0">Recruiting Application</span>
                        </div>

                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                            <form method="post" style="width: 23rem">
                                <h6 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
                                    Login
                                </h6>

                                <div class="form-outline mb-4 text-center">

                                    <label class="form-label" asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>


                                </div>

                                <div class="form-outline mb-4 text-center">

                                    <label class="form-label" asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>

                                <div class="pt-1 mb-4">
                                    <button type="submit" class="btn btn-dark btn-lg btn-block w-100">LOGIN</button>
                                </div>

                                <p class="small mb-5 pb-lg-2">
                                    <a class="text-muted">Forgot password?</a>
                                </p>

                                <p>
                                    Don't have an account?
                                    <a class="link-dark" asp-controller="Account" asp-action="Register">Register here</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.5/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
